{
    "$schema": "http://json-schema.org/schema$",
    "type": "object",
    "required": ["page_keys", "page_filename_template", "index_filename", "patterns", "files", "reportlets"],
    "properties": {
        "page_keys": {
            "type": "array",
            "items": {
                "type": "string",
        "pattern": "^[a-zA-Z0-9]*$"
            }
        },
        "page_filename_template": {
            "type": "string",
        "pattern": "^([^][]*(\\[[^][}{]*\\{[a-zA-Z0-9]*\\}[^][}{]*\\]*)*)*$"
        },
        "index_filename": {
            "type": "string"
        },
        "patterns": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "type": "string"
                }
            }
        },
        "files": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "required": ["pattern", "filter"],
                    "properties": {
                        "pattern": {
                            "type": "string"
                        },
                        "filter": {
                            "type": "object"
                        },
                        "global": {
                            "type": "boolean"
                        },
                        "allow_multiple": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "reportlets": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["type"],
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["single", "contour", "compare", "distributions", "crash"]
                    },
                    "qcform": {
                        "type": "boolean"
                    },
                    "nslices": {
                        "type": "integer"
                    }
                },
                "allOf": [
                    {
                        "if": {
                            "properties": { "type": { "const": "single" } }
                        },
                        "then": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "image": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": { "type": { "const": "compare" } }
                        },
                        "then": {
                            "properties": {
                                "name1": {
                                    "type": "string"
                                },
                                "image1": {
                                    "type": "string"
                                },
                                "name2": {
                                    "type": "string"
                                },
                                "image2": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": { "type": { "const": "contour" } }
                        },
                        "then": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                },
                                "image": {
                                    "type": "string"
                                },
                                "labelimage": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": { "type": { "const": "distributions" } }
                        },
                        "then": {
                            "properties": {
                                "distsfile": {
                                    "type": "string"
                                },
                                "labelfile": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    {
                        "if": {
                            "properties": { "type": { "const": "crash" } }
                        },
                        "then": {
                            "properties": {
                                "crashfiles": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}

