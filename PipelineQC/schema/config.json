{
    "$schema": "http://json-schema.org/schema$",
    "type": "object",
    "properties": {
        "page_keys": {
            "type": "array",
            "items": {
                "type": "string",
        "pattern": "^[a-zA-Z0-9]*$"
            }
        },
        "page_filename_template": {
            "type": "string",
        "pattern": "^([^][]*(\\[[^][}{]*\\{[a-zA-Z0-9]*\\}[^][}{]*\\]*)*)*$"
        },
        "index_filename": {
            "type": "string"
        },
        "patterns": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "type": "string"
                }
            }
        },
        "files": {
            "type": "object",
            "patternProperties": {
                ".*": {
                    "type": "object",
                    "properties": {
                        "pattern": {
                            "type": "string"
                        },
                        "filter": {
                            "type": "object"
                        },
                        "global": {
                            "type": "boolean"
                        },
                        "allow_multiple": {
                            "type": "boolean"
                        }
                    },
                    "required": ["pattern", "filter"]
                }
            }
        },
        "reportlets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["single", "contour", "compare", "distributions", "crash"]
                    },
                    "qcform": {
                        "type": "boolean"
                    },
                    "nslices": {
                        "type": "integer"
                    }
                },
                "patternProperties": {
                    "^name[12]?$": {
                        "type": "string"
                    },
                    "^image[12]?$": {
                        "type": "string"
                    },
                    "labelimage": {
                        "type": "string"
                    },
                    "labelfile": {
                        "type": "string"
                    },
                    "distsfile": {
                        "type": "string"
                    }
                },
                "additionalProperties": false,
                "required": ["type"]
            }
        }
    },
    "required": ["page_keys", "page_filename_template", "index_filename", "patterns", "files", "reportlets"]
}

