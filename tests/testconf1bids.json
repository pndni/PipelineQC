{
    "page_keys": ["subject", "acquisition", "reconstruction", "run", "session"],
    "page_filename_template": "sub-{subject}[/ses-{session}]/sub-{subject}[_ses-{session}][_acq-{acquisition}][_rec-{reconstruction}][_run-{run}]_QC.html",
    "index_filename": "QC_index.html",
    "patterns": {
        "simple": "(?P<base>.*)\\.(?P<extension>.*)",
        "crash": "sub-(?P<subject>[a-zA-Z0-9]+)(/ses-(?P<session>[a-zA-Z0-9]+))?/logs/sub-(?P=subject)(_ses-(?P=session))?(_acq-(?P<acquisition>[a-zA-Z0-9]+))?(_rec-(?P<reconstruction>[a-zA-Z0-9]+))?(_run-(?P<run>[0-9]+))?/crash.*\\.pklz",
	"bids": ["bids", "derivatives", "tests/pndni_bids.json"]
    },
    "files": {
        "model": {
            "pattern": "simple",
            "filter": {"base": "model"},
            "global": true
        },
        "T1w": {
            "pattern": "bids",
            "filter": {"suffix": "T1w", "space": null, "desc": null}
        },
        "nu_bet": {
            "pattern": "bids",
            "filter": {"desc": "nucor"}
        },
        "normalized": {
            "pattern": "bids",
            "filter": {"desc": "normalized"}
        },
        "warped_model": {
            "pattern": "bids",
            "filter": {"space": "T1w", "suffix": "T1w"}
        },
        "features": {
            "pattern": "bids",
            "filter": {"suffix": "features", "extension": "txt"}
        },
        "features_label": {
            "pattern": "bids",
            "filter": {"presuffix": "features", "suffix": "labels", "extension": "tsv"}
        },
        "classified": {
            "pattern": "bids",
            "filter": {"suffix": "dseg", "desc": "tissue"}
        },
        "transformed_atlas": {
            "pattern": "bids",
            "filter": {"suffix": "dseg", "desc": "lobes"}
        },
        "crashfiles": {
            "pattern": "crash",
            "filter": {},
            "allow_multiple": true
        }
    },
    "reportlets": [
        {
            "type": "compare",
            "name1": "Non-uniformity corrected",
            "image1": "nu_bet",
            "name2": "Inormalized",
            "image2": "normalized"
        },
        {
            "type": "compare",
            "name1": "Non-uniformity corrected",
            "image1": "nu_bet",
            "name2": "Inormalized",
            "image2": "normalized",
            "nslices": 3
        },
        {
            "type": "compare",
            "name1": "Non-uniformity corrected",
            "image1": "nu_bet",
            "name2": "Inormalized",
            "image2": "normalized",
            "qcform": false
        },
        {
            "type": "single",
            "name": "Non-uniformity corrected",
            "image": "nu_bet"
        },
        {
            "type": "single",
            "name": "Non-uniformity corrected",
            "image": "nu_bet",
            "nslices": 3
        },
        {
            "type": "single",
            "name": "Non-uniformity corrected",
            "image": "nu_bet",
            "qcform": false
        },
        {
            "type": "contour",
            "name": "Non-uniformity corrected",
            "image": "nu_bet",
            "labelimage": "transformed_atlas"
        },
        {
            "type": "contour",
            "name": "Non-uniformity corrected",
            "image": "nu_bet",
            "labelimage": "transformed_atlas",
            "nslices": 3,
	    "contour_levels": [0.001]
        },
        {
            "type": "contour",
            "name": "Non-uniformity corrected",
            "image": "nu_bet",
            "labelimage": "transformed_atlas",
            "qcform": false
        },
        {
            "type": "distributions",
            "name": "features",
            "distsfile": "features",
            "labelfile": "features_label"
        },
        {
            "type": "distributions",
            "name": "features",
            "distsfile": "features",
            "labelfile": "features_label",
            "qcform": false
        },
	{
	    "type": "crash",
	    "name": "error",
	    "crashfiles": "crashfiles"
	},
	{
	    "type": "rating",
	    "name": "Rating",
	    "widgets": [
		{"name": "Overall",
		 "type": "radio",
		 "options": [
		     {"name": "Reject", "value": 1},
		     {"name": "Poor", "value": 2},
		     {"name": "Acceptable", "value": 3},
		     {"name": "Good", "value": 4},
		     {"name": "Great", "value": 5}
		 ]
		},
		{
		    "name": "Notes",
		    "type": "checkbox",
		    "fields": [
			"Non-uniformity failed",
			"Registration failed"
		    ]
		},
		{
		    "name": "Other",
		    "type": "text"
		}
	    ]
	},
        {
            "type": "probmap",
            "name": "Non-uniformity corrected",
            "image": "nu_bet",
            "probmapimage": "transformed_atlas",
	    "max_intensity_fraction": 0.95
        },
        {
            "type": "overlay",
            "name": "Non-uniformity corrected",
            "image": "nu_bet",
            "labelimage": "transformed_atlas",
	    "max_intensity_fraction": 0.95
	}
    ],
    "global_reportlet_settings": {
	"use_relative_dir": true
    }
}
